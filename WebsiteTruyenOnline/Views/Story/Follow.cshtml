@{
    Layout = "~/Views/Shared/_Layouts.cshtml";

}
@model List<Model.ViewModel.TruyenViewModel>
<div class="warpper mt-3">
    <div class="row">
        <div class="col-xl-9">
            <div>
                <div class="row mt-3">
                    <div class="col-12 " style="font-size: 20px;">Truyện Đang Theo Dõi</div>
                </div>
                <div class="row updated-Container ml-1 mt-2">
                    @foreach (var it in Model)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-4 col-6 p-0 image-box">
                            <a href="/@it.MetaTitle-@it.Id_Truyen">
                                <img class="updated-story-image " src="@it.Avt_Truyen"
                                     alt="@it.Ten_Truyen">
                            </a>
                            <div class="image-content">
                                <p>@it.Ten_Truyen</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
